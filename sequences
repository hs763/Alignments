#python

# Define the header and DNA sequence
header = ">hg38_dna range=chr2:144477008-144477623 5'pad=0 3'pad=0 strand=+ repeatMasking=none"
dna_sequence = (
    "TAAATATTGTTCTTAATAATAAACTGTCTGGTAGATGTATGAAACCTGTT\n"
    "CACTCTCCTATTGATGTTTTACTGGCAATAAGAGCTGAGGCCCTACCCTA\n"
    "TTTTAAATTTAACTCTATGAAAATGGGCACTACCCAAGAAAATGCTAGCA\n"
    "CAATTCCAGATAAAATATAATGTTGTGAGGCTGAAAAGTGCATGCAAAGC\n"
    "AAGCTGCATTATTAGAATGTTTAAATATTAATTATACCACTGTATAGTAA\n"
    "AGATGATCAAGTATGAGTGTCAACTAATTTTCTAAAAGCTGCAACATTTA\n"
    "CTTTCATCTAAACTTCCTTTGTTAAAAGTAAAACTAAAAGCCCAGCAAGT\n"
    "TTAGTCTACTTGAGTGTGTTTATTTTTATTGGTTTCTGCATAATTTTTTT\n"
    "TCTACCATAAACCAACTTTAACCCCTTTACTGTAATCTCTGCCAGTATAA\n"
    "CTCCAACAGCACATCATAAAATTCCTATAATTCTTCAAAGCCACGAAGTT\n"
    "GGAAAGGAAAAGCTTGGGTACTTTGTAACAAACACCAGCTATAAGCTTCA\n"
    "GCCAGTTACATTTAACTCTTACAAACCCTCTTTTTGTGTGTGTGGATAAA\n"
    "CTTACAGATTGATGCT"
)

# Function to save DNA sequence as FASTA
def save_as_fasta(header, sequence, filename):
    with open(filename, 'w') as fasta_file:
        fasta_file.write(f"{header}\n")
        fasta_file.write(f"{sequence}\n")

# Save the DNA sequence to a file
filename = "hg38_dna.fasta"
save_as_fasta(header, dna_sequence, filename)

print(f"DNA sequence saved as {filename}")




# Define the header and DNA sequence
header = ">panTro6_dna range=chr2B:31045685-31046302 5'pad=0 3'pad=0 strand=+ repeatMasking=none"
dna_sequence = (
    "TAAATATTGTTCTTAATAATAAACTGTCTGGTAGATGTATGAAACCTGTT"
    "CACTCTCCTATTGATGTTTTACTGGCAATAAGAGCTGAGGCCCTACCCTA"
    "TTTTAAATTTAACTCTATGAAAATGGGCACTACCCAAGAAAATGCTAGCA"
    "CAATTCCAGATAAAATATAATGTTGCGCGAGGCTGAAAAGTGCATGCAAA"
    "GCAAGCTGCATTATTAGAATGTTTAAATATTAATTATACCACTGTGTAGT"
    "AAAGATGATCAAGTATGAGTGTCAACTAATTTTCTAAAAGCTGCAACATT"
    "TACTTTCATCTAAACTTCCTTTGTTAAAAGTAAAACTAAAAGCCCAGCAA"
    "GTTTAGTCTACTTGAGTGTGTTTATTTTTATTGGTTTCTGCATAATTTTT"
    "TTTCTACCATAAACCAACTTTAACCCCTTTTCTGTAATCTCTGCCAGTAT"
    "AACTCCAACAGCACATCATAAAATTCCTATAATTCTTCAAAGCCACGGAG"
    "TTGGAAAGGAAAGGCTTGGGTACTTTGTAACAAACGCCAGCTATAAGCTT"
    "CAGCCAGTTACATTTAACTCTTACAAACCCTCTTTTTGTGTGTGTGGATA"
    "AACTTACAGATTTATGCT"
)

# Function to save DNA sequence as FASTA with one long line
def save_as_fasta(header, sequence, filename):
    with open(filename, 'w') as fasta_file:
        fasta_file.write(f"{header}\n")
        fasta_file.write(sequence + "\n")

# Save the DNA sequence to a file
filename = "panTro6_dna.fasta"
save_as_fasta(header, dna_sequence, filename)

print(f"DNA sequence saved as {filename}")



